@{
    ViewData["Title"] = "Login";
    Layout = null;
}
@model StageUp.Models.POCO.Usuario
@{

    if (TempData["Mensagem"] != null)
    {
        <script>
            alert("@TempData["Mensagem"]")
        </script>
    }
    if (TempData["Erro"] != null)
    {
        if (2 == (int)TempData["erro"])
        {
            <script>
                document.getElementById('Span').value = "Email Inválido";
            </script>
        }
    }
    else
    {
        <script>
            document.getElementById('Span').value = "";
        </script>
    }
}


<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link rel="stylesheet" href="~/css/login.css">
</head>

<body class="container">
    <div class="row block">
        <div class="col-6 fundo rounded-start-4">
            <h1 class="text-center text-light LOGO">Stage<span class="text-danger">Up</span></h1>
            <img src="" class="text-light text-center" alt="Grupo de pessoas interagindo e trocando conhecimento">
        </div>
        <div class="col-6 bg-white rounded-end-4 d-flex justify-content-center flex-column">
            <h2 class="text-center mt-5">Bem-vindo(a) ao Stage<span class="text-danger">Up</span>!</h2>
            <p class="text-center mt-3 fs-5">Realize Login utilizando seus dados de acesso.</p>
            <form asp-action="Logar" asp-controller="Login" class="my-5">
                <span id="Span"></span>
                <div class="form-floating mb-3">
                    <input type="email" asp-for="Email" class="form-control border border-danger"
                           style="--bs-border-opacity: .5;" id="InputEmail" placeholder="Email">
                    <label for="InputEmail">Email</label>
                </div>
                <div class="form-floating">
                    <input type="password" asp-for="Senha" class="form-control border border-danger"
                           style="--bs-border-opacity: .5;" id="InputSenha" placeholder="Senha">
                    <label for="InputSenha">Senha</label>
                </div>
                <div class="form-check mt-3">
                    <input class="form-check-input" name="Log" type="checkbox" value="true" id="CheckContinuarLogado">
                    <label class="form-check-label" for="CheckContinuarLogado">
                        Continuar logado
                    </label>
                </div>
                <div class="col-auto mt-3 d-flex justify-content-between">
                    <button type="submit" class="btn btn-danger mb-3">Logar-se</button>
                    <p class="sem-conta">
                        Não tem uma conta?<a href="@Url.Action("Index","CadastroUsuario")" class="text-danger link-cadastro">
                            Cadastre-se!
                        </a>
                    </p>
                </div>
                <p class="sem-conta text-end">
                    Ou crie uma conta para sua empresa:<a href="@Url.Action("Index","CadastroEmpresa")"
                                                          class="text-danger link-cadastro">
                        Crie já!
                    </a>
            </form>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
            crossorigin="anonymous"></script>
    <script src=""></script>
</body>

</html>